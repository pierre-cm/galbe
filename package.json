{
  "name": "galbe",
  "version": "0.1.10",
  "description": "Fast, lightweight and highly customizable JavaScript web framework based on Bun",
  "author": "Pierre Caillaud M (https://github.com/pierre-cm)",
  "type": "module",
  "bin": "./bin/cli.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "files": [
    "dist/",
    "bin/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pierre-cm/galbe"
  },
  "bugs": "https://github.com/pierre-cm/galbe/issues",
  "homepage": "https://galbe.dev",
  "keywords": [
    "bun",
    "http",
    "web",
    "framework",
    "server",
    "api"
  ],
  "license": "MIT",
  "scripts": {
    "build": "bun ./scripts/build.ts",
    "clean": "rm -rf dist",
    "test": "bun test",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/bun": "^1.0.4",
    "release-it": "^17.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@swc/core": "^1.3.107",
    "@swc/wasm": "^1.4.0",
    "acorn": "^8.11.2",
    "acorn-walk": "^8.3.0",
    "commander": "^11.1.0"
  },
  "release-it": {
    "git": {
      "pushRepo": "git@github.com:pierre-cm/galbe.git"
    },
    "github": {
      "requireBranch": "main",
      "release": "true"
    }
  }
}
