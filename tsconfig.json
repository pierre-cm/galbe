{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "incremental": false,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [
      "bun-types" // add Bun global
    ],
    "baseUrl": "./src",
    "rootDir": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
  },
  "include":["src/**/*","test/**/*", "bin/**/*","script/**/*.ts"],
  "exclude": ["node_modules", "test/**/*", "bin/**/*","script/**/*.ts", "docs"]
}
